<p id="notice"><%= notice %></p>
<h1>Items</h1>
<div class="product-details">
  <table>
    <thead>
      <tr>
        <th>Item</th>
        <th>Cost</th>
        <th>Purpose</th>
        <th>Out_of_Stock</th>
        <!-- <th>Out_of_Stock</th> -->
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.item_id %></td>
          <td><%= item.cost %></td>
          <td><%= item.purpose %></td>
          <td><%= item.out_of_stock %></td>
          <td><%= link_to 'Show', item %></td>
          <td><%= link_to 'Edit', edit_item_path(item) %></td>
          <td><%= link_to 'Destroy', item, method: :delete, data: { confirm: 'No Please Don\'t' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <br>


</div>
  <%= link_to 'New Item', new_item_path %>
